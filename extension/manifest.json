{
  "manifest_version": 3,
  "name": "LinkedIn Customized Messages Generator",
  "version": "1.0",
  "description": "Generate personalized messages for LinkedIn connections based on their profile information.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "tabs",
    "action"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LinkedIn Customized Messages Generator",
    "default_popup": "popup.html"
  },
  "commands": {
    "open-options": {
      "suggested_key": {
        "default": "Alt+Shift+O",
        "windows": "Alt+Shift+O"
      },
      "description": "Open the Options page"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["selectors.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
